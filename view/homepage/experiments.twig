{% extends "homepage.twig" %}

{% block meta_description %}Something to bug around, waste some time{% endblock %}

{% block title %}Experiment
{% if enabledExperiment is defined %} - {{ enabledExperiment.title }}{% else %}s{% endif %}
{% endblock %}

{% block page_title %}Experiments{% endblock %}

{% block content %}
{% if availableExperiments|length > 0 %}
    {% for link,title in availableExperiments %}
<div id="{{ link }}" class="experiment{% if link == enabledExperiment.link %} active{% endif %}">
    {% include "homepage/experiments/%s.twig"|format(link) %}
    <p class="link-container">
    {% if link|slice(0, 6) == "jquery" %}
        <a href="#{{ link }}" class="launch-link">Launch it</a>
    {% else %}
        <a href="/{{ link }}/">Go there</a>
    {% endif %}
    </p>
</div>
    {% endfor %}
{% else %}
<p>No experiments available</p>
{% endif %}
{% endblock %}
